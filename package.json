{
  "name": "@inkdpixels/commit-analyzer",
  "version": "1.0.1",
  "description": "Plugin for semantic-release which utilizes the commit guidelines of Neos.",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run lint && npm run jest:coverage",
    "lint": "eslint src",
    "jest": "jest",
    "jest:watch": "npm run jest -- --watch",
    "jest:coverage": "npm run jest -- --coverage"
  },
  "author": "Tyll Wei√ü <inkdpixels@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^4.4.1",
    "eslint-config-xo": "^0.18.2",
    "jest": "^20.0.4",
    "sinon": "^3.2.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)spec.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "release": {
    "analyzeCommits": "@inkdpixels/commit-analyzer",
    "generateNotes": "@inkdpixels/release-notes-generator"
  }
}
